---
layout: page
---

<div class="post">
  <article>
    <div class="container">
      <!-- Debugging lines to check if the members collection is accessible -->
      <h3>Debugging Info</h3>

      <!-- Use direct reference to the collection documents -->
      {% assign members = site.collections['members'].docs %} <!-- Updated assignment -->

      <p><strong>Collection Size:</strong> {{ site.members.size }}</p> <!-- This should remain correct -->
      <p><strong>Members Count:</strong> {{ members.size }}</p> <!-- Debugging to check if members is correctly assigned -->

      <!-- Row for displaying member profiles -->
      <div class="row">
        {% for profile in members %}
          <div class="col-12 col-md-10 offset-md-1 mb-4"> <!-- Full width for the profile container -->
            <hr>
            <div class="profile d-flex align-items-start">
              {% if profile.image %}
                {% assign profile_image_path = '/assets/img/members/' | append: profile.image %}
                <div class="profile-img">
                  <img src="{{ profile_image_path }}" class="profile-img-fixed img-fluid z-depth-1 rounded-circle" alt="{{ profile.name }}">
                </div>
              {% else %}
                <p>No image for {{ profile.name }}</p> <!-- Debugging line for missing image -->
              {% endif %}

              <div class="profile-content ml-4">
                <h2>{{ profile.name }}</h2>
                <p><strong>Tags:</strong> {{ profile.tags | join: ', ' }}</p>
                <p>{{ profile.content | markdownify }}</p>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </article>
</div>
