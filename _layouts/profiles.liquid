---
layout: page
---

<div class="post">
  <article>
    <div class="container">
      <p>Members count: {{ members.size }}</p> <!-- Debugging line to check member count -->

      <div class="row">
        {% for profile in members %}
          <div class="col-12 col-md-10 offset-md-1 mb-4"> <!-- Center the profile content and expand the column width -->
            <hr>
            <div class="profile d-flex align-items-start">
              {% if profile.image %}
                {% assign profile_image_path = '/assets/img/members/' | append: profile.image %}
                <div class="profile-img">
                  <img src="{{ profile_image_path }}" class="profile-img-fixed img-fluid z-depth-1 rounded-circle" alt="{{ profile.name }}">
                </div>
              {% endif %}
              <div class="profile-content ml-4"> <!-- Increase the margin for better spacing -->
                <h2>{{ profile.name }}</h2>
                <p><strong>Tags:</strong> {{ profile.tags | join: ', ' }}</p>
                <p>{{ profile.content | markdownify }}</p> <!-- Ensure content is rendered as markdown -->
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </article>
</div>
